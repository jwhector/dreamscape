{
  "name": "console-chat",
  "version": "1.0.0",
  "description": "A simple console-style chat app using OpenAI and MongoDB",
  "main": "server.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "concurrently \"nodemon --exec ts-node server.ts\" \"browser-sync start --config bs-config.js\""
  },
  "dependencies": {
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.10.0",
    "openai": "^4.83.0",
    "qrcode": "^1.5.4",
    "socket.io": "^4.8.1",
    "typescript": "^5.7.3"
  },
  "devDependencies": {
    "@types/jsonwebtoken": "^9.0.8",
    "browser-sync": "^3.0.3",
    "concurrently": "^9.1.2",
    "nodemon": "^3.1.9",
    "ts-node": "^10.9.2"
  }
}
